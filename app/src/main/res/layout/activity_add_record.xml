<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/keyboard_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow android:layout_weight="1">

                    <Button
                        android:id="@+id/keyboard_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="1"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/keyboard_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="2"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/keyboard_three"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="3"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow android:layout_weight="1">

                    <Button
                        android:id="@+id/keyboard_four"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="4"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/keyboard_five"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="5"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/keyboard_six"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="6"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow android:layout_weight="1">

                    <Button
                        android:id="@+id/keyboard_seven"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="7"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/keyboard_eight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="8"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/keyboard_nine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="9"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow android:layout_weight="1">

                    <Button
                        android:id="@+id/keyboard_point"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="."
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/keyboard_zero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="0"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/keyboard_clean"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:src="@drawable/baseline_backspace_24" />

                </TableRow>
            </TableLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/keyboard_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:src="@drawable/ic_baseline_arrow_back_24" />

                <Button
                    android:id="@+id/keyboard_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:text="日期"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/keyboard_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/white"
                    android:src="@drawable/baseline_done_24" />


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/keyboard_layout"
        android:background="@color/teal_200">

        <TextView
            android:id="@+id/textView_amount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/editremark"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textView_amount"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_edit_text"
            android:hint="点击写备注..."
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="normal" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/in_out_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editremark"
            app:tabIndicatorColor="#000000"
            app:tabIndicatorFullWidth="false"
            app:tabMode="fixed"
            app:tabRippleColor="#00000000"
            app:tabSelectedTextColor="#000000"
            app:tabTextColor="@color/black" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/in_out_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/in_out_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />

        <!--        <androidx.recyclerview.widget.RecyclerView-->
        <!--            android:id="@+id/recyclerView"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_below="@+id/editremark"-->
        <!--            android:layout_marginStart="10dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:layout_marginEnd="10dp"-->
        <!--            android:layout_marginBottom="10dp"></androidx.recyclerview.widget.RecyclerView>-->

    </RelativeLayout>
</RelativeLayout>